<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/v_adapter_state_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_back_arrow_white"/>

    <TextView
        android:id="@+id/v_adapter_state_tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/margin_xxxlarge"
        android:layout_marginRight="@dimen/margin_xxxlarge"
        android:layout_marginTop="@dimen/margin_small"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textColor="@color/app_text_color_dark"
        android:textSize="@dimen/font_size_medium2"
        tools:text="No Records"/>

</LinearLayout>